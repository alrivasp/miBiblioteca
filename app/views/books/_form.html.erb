<!-- Formulario with -->
<div class="form-group text-center">
    <%= form_with(model: book, local: true) do |form| %>
        <!-- Visualizador de Errores Inicio -->
        <% if book.errors.any? %>            
            <div class="container alert alert-warning alert-dismissible fade show text-center" role="alert">                
                <div id="error_explanation">
                    <h5><%= pluralize(book.errors.count, "error") %> on saving post:</h2>
                    <ul>
                        <% book.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% end %>
        <!-- Visualizador de Errores Fin -->

        <!-- Formulario Inicio -->
        <div class="row">
            <div class="col-3 text-right m-1">
                <%= form.label :title , "Titulo", class:"col-sm-2 col-form-label" %>
            </div>
            <div class="col-6 text-left m-1">
                <%= form.text_field :title, id: :book_title, class:"form-control", placeholder:"INGRESE EL TITULO DEL LIBRO" %>
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-right m-1">
                <%= form.label :autor, "Autor", class:"col-sm-2 col-form-label" %>
            </div>
            <div class="col-6 text-left m-1">
                <%= form.text_field :author, id: :book_author , class:"form-control", placeholder:"INGRESE EL AUTOR DEL LIBRO"%>
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-right m-1">
                <%= form.label :status, "Estado", class:"col-sm-2 col-form-label" %>                
            </div>
            <div class="col-6 text-left m-1">                
                <%= form.select :status, Book.statuses.keys, class:"form-control" %>
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-right m-1 ">
               <%= form.label :date_out, "Fecha de Salida", class:"text-right" %>         
            </div>
            <div class="col-2 text-left m-1">                
                <%= form.date_field("date_out", min: Date.today) %>
            </div>

             <div class="col-2 text-right m-1 ">
               <%= form.label :date_in, "Fecha de Entreda", class:"text-right" %>         
            </div>
            <div class="col-3 text-left m-1">                
                <%= form.date_field("date_out", min: Date.today) %>
            </div>
        </div>
        <hr>
        <div class="actions m-4">
            <%= form.submit :"REGISTRAR", class:"btn btn-success" %>
        </div>
        <!-- Formulario Fin -->
    <% end %>
</div>